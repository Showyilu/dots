bindkey + resize +1
bindkey _ resize -1
termcap xterm*  xn:hs@
hardstatus on
blankerprg cmatrix -ab -u9
idle 60 blanker
shell -$SHELL
startup_message off
defscrollback 1000
hardstatus alwayslastline '%{= wk}%?%-Lw%?%{r}(%{k}%n*%f%t%?(%u)%?%{r})%{k}%?%+Lw%?%?%= %m/%d %C%A'
activity ''
termcapinfo xterm* 'hs:ts=\\E]2;:fs=\\007:ds=\\E]2;screen\\007'


